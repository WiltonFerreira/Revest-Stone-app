<div class="form-body">
  <div class="row">
      <div class="form-holder">
        <div class="form-content">
          <div class="form-items">
            <h3 class="form-title"> Pre√ßo do Fornecedor </h3>

<%= form_with(model: tabela_compra) do |form| %>
  <% if tabela_compra.errors.any? %>
    <div style="color: red">
      <h2><%= tabela_compra.errors.count %> <%= tabela_compra.errors.count==1 ? "erro deve" : "erros devem" %> ser corrigidos:</h2>

      <ul>
        <% tabela_compra.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-1 mb-0">
    <%= form.label :data, style: "display: block", style: "display: block", class: "form-label" %>
    <%= form.date_field :data, class: "form-control", placeholder: "Data da tabela" %>
  </div>

  <div class="mt-1 mb-0">
    <%= form.label :recurso_id, "Recurso", style: "display: block", class: "form-label"  %>
    <%= form.select :recurso_id, options_from_collection_for_select(Recurso.order(:nome), "id", "recurso_grupo", tabela_compra.recurso_id) %>
  </div>

  <div class="mt-1 mb-0">
    <%= form.label :supplier_id, "Fornecedor", style: "display: block", class: "form-label"  %>
    <%= form.select :supplier_id, options_from_collection_for_select(Supplier.order(:fantasia), "id", "nomesupplier", tabela_compra.supplier_id) %>
  </div>

  <div class="mt-1 mb-0">
    <%= form.label :valor, style: "display: block", style: "display: block", class: "form-label" %>
    <%= form.text_field :valor, class: "form-control", placeholder: "Valor" %>
  </div>

  <div class="mt-1 mb-3">
    <%= form.check_box :ativo %>
    <%= form.label :ativo, style: "display: inline", class: "form-label" %>
  </div>
  

  <div class="row" style="border-top: 4px;">
    <%= button_tag "Limpar", type: :reset , class: "btn btn-secondary col-md-4 " %>
    <%= form.submit  class: "btn btn-primary col-md-4 offset-md-4"  %>
  </div>
  
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
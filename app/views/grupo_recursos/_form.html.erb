<div class="form-body">
  <div class="row">
      <div class="form-holder">
        <div class="form-content">
          <div class="form-items">
            <h3 class="form-title"> Grupo de Recurso </h3>

<%= form_with(model: grupo_recurso) do |form| %>
  <% if grupo_recurso.errors.any? %>
    <div style="color: red">
      <h2><%= grupo_recurso.errors.count %> <%= grupo_recurso.errors.count==1 ? "erro deve" : "erros devem" %> ser corrigidos:</h2>

      <ul>
        <% grupo_recurso.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-1 mb-0">
    <%= form.label :nome, style: "display: block", class: "form-label" %>
    <%= form.text_field :nome, size: 50, class: "form-control", placeholder: "Nome do Grupo de Recurso"  %>
  </div>
  
  <div class="row" style="border-top: 4px;">
    <%= form.submit  class: "btn btn-primary col-md-4 offset-md-4"  %>
  </div>
  
<% end %>
</div>
      </div>
    </div>
  </div>
</div>

